{
  "name": "gamified-activity-tracker",
  "version": "1.0.0",
  "description": "Gamified Activity & Reward Tracker - Firebase Configuration",
  "private": true,
  "scripts": {
    "emulator": "firebase emulators:start",
    "emulator:export": "firebase emulators:export ./emulator-data",
    "emulator:import": "firebase emulators:start --import=./emulator-data",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "deploy:indexes": "firebase deploy --only firestore:indexes",
    "test:rules": "firebase emulators:exec --only firestore 'cd tests && npm test'"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^3.0.0",
    "firebase-tools": "^13.0.0"
  }
}
